<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using SQLite and Node.js</title>
</head>
<body>
  <div class="table-data">
    <h2>Display Data using Node.js & SQLite</h2>
    <table border="1">
      <tr>
        <th>S.N</th>
        <th>Full Name</th>
        <th>ID</th>
        <th>Gender</th>
      </tr>
      <% if (userData.length !== 0) { %>
        <% userData.forEach(function(data, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= data.name %></td>
            <td><%= data.player_id %></td>
            <td><%= data.gender %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7">No Data Found</td>
        </tr>
      <% } %>
    </table>
  </div>
</body>
</html>